{
  "database": {
    "rules": "database.rules.json"
  },

  "hosting": {
    "site": "picpic-guests",
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },

  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ]
}
